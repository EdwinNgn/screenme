<div class="signup-bg" style = "background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1559146820-a75deba24b58?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&w=1000&q=80);">
  <div class="container">
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { id: :regForm }) do |f| %>
    <h2 style = "color:white; margin-bottom:50px;">Sign In </h2>
      <div class="form-inputs">
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email" },
                    input_html: { class: 'form-input' } %>
        <%= f.input :password,
                    required: false,
                    input_html: { autocomplete: "current-password" },
                    input_html: { class: 'form-input' } %>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Log in" %>
      </div>
      <%= render "devise/shared/links" %>
    <% end %>


  </div>
</div>
