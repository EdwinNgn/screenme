<div class="signup-bg" style = "background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1559146820-a75deba24b58?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&w=1000&q=80);">

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { id: :regForm }) do |f| %>
  <%= f.error_notification %>

  <h2 style = "color:white; margin-bottom:50px;">Sign Up </h2>

    <div class="form-inputs">
      <div class="tab">
        <p><%= f.input :first_name, input_html: { class: 'form-input' } %></p>
        <p><%= f.input :last_name, input_html: { class: 'form-input' }%></p>
      </div>

      <div class="tab">
        <p ><%= f.input :birth_day, input_html: { class: 'form-input' }%></p>
        <p ><%= f.input :birth_month, input_html: { class: 'form-input' }%></p>
        <p ><%= f.input :birth_year, input_html: { class: 'form-input' }%></p>
      </div>

      <div class="tab">
        <p ><%= f.input :email,
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "email" }, input_html: { class: 'form-input' } %></p>
        <p ><%= f.input :password,
                  required: true,
                  hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                  input_html: { autocomplete: "new-password" }, input_html: { class: 'form-input' }%></p>
        <p ><%= f.input :password_confirmation,
                  required: true,
                  input_html: { autocomplete: "new-password" }, input_html: { class: 'form-input' } %>
        </p>
      </div>

      <div class="tab">
        <p ><%= f.input :avatar, as: :file, input_html: { class: 'form-input' } %></p>
        <p ><%= f.input :coverpicture, as: :file, input_html: { class: 'form-input' } %></p>
      </div>
    </div>


    <div style="overflow:auto;">
      <div style="float:right;">
        <button type="button" id="prevBtn">Previous</button>
        <button type="button" id="nextBtn">Next</button>
      </div>
    </div>

  <div style="text-align:center;margin-top:40px;">
    <span class="step"></span>
    <span class="step"></span>
    <span class="step"></span>
    <span class="step"></span>
  </div>

<% end %>

</div>

