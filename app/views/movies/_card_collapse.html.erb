<% require "open-uri" %>
<% id = "0" * (7 - omdb_id.to_s.length) + omdb_id.to_s %>
<% url = "http://www.omdbapi.com/?i=tt#{id}&apikey=adf1f2d7"%>
<% movie = JSON.parse(open(url).read) %>


<div class="collapse collapse-card mt-3 pt-3 pb-3  pr-5 pl-5" id="collapse-movie-<%= movie['imdbID'] %>">
  <div class="collaspe_header d-flex flex-row justify-content-between mb-3">
    <h2><%= movie['Title'] %></h2>
    <div class="collapse_header_action d-flex">
      <div class="action_col d-flex flex-column ml-3">
        <i class="far fa-thumbs-up"></i>
        <span>like</span>
      </div>
      <div class="action_col d-flex flex-column ml-3">
        <i class="far fa-thumbs-down"></i>
        <span>dislike</span>
      </div>
      <div class="action_col d-flex flex-column ml-3">
        <i class="far fa-bookmark"></i>
        <span>Add</span>
      </div>
      <div class="action_col d-flex flex-column ml-3">
        <i class="fas fa-minus-circle"></i>
        <span>block</span>
      </div>
    </div>
  </div>
  <div class="d-flex flex-row justify-content-between">
    <div class="collaspe_left">
      <div class='collaspe_left__details d-flex justify-content-around'>
            <span><strong>Date: </strong><%= movie['Year'] %></span>
            <span><strong>Duration: </strong><%= movie['Runtime'] %>min</span>
            <span><strong>Genre: </strong><%= movie['Genre'] %></span>
      </div>
      <div class='collaspe_left__review mt-2'>
        <p><%= movie['Plot'] %></p>
      </div>
      <div>
        <p><strong>Director: </strong><%= movie['Director'] %></p>
        <p><strong>Casting: </strong><%= movie['Actors'] %></p>
      </div>
    </div>
    <div class="collaspe_right">
      <iframe width="560" height="315" src="https://www.youtube.com/embed/7kSuas6mRpk?controls=0" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
    </div>
  </div>
</div>
