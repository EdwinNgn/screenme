
<div class='moviecard d-flex flex-row'>
  <div class='moviecard_left'>
    <img src=<%= movie_details['Poster'] %>>
  </div>
  <div class='moviecard_right'>
    <div class='card_right__action pt-1'>
      <i class="far fa-thumbs-up"></i>
      <i class="far fa-thumbs-down"></i>
      <i class="far fa-bookmark"></i>
      <i class="fas fa-minus-circle"></i>
    </div>
    <div class="moviecard_right__text">
      <h4><%= movie_details['Title'] %></h4>
      <div class='moviecard_right__details'>
        <span><%= movie_details['Year'] %></span>
        <span><%= movie_details['Runtime'] %></span>
        <span><%= movie_details['Genre'] %></span>
      </div>
      <!-- $ -->

      <div class='moviecard_right__review mt-2'>
        <p><%= movie_details['Plot'] %></p>
      </div>
    </div>
  </div>
  <div class='moviecard_chevron' data-toggle="collapse" href="#collapse-movie-<%= movie_details['imdbID'] %>" role="button" aria-expanded="false" aria-controls="collapseExample">
      <i class="fas fa-chevron-down"></i>
  </div>
</div>

